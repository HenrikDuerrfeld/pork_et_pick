<div class="row justify-content-center ml-2 mr-2">
  <div class="col-lg-5 col-sm-12 col-md-6 colcontainer mt-4">
    <h1>New Pig</h1>
    <%= simple_form_for @pig do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price_per_day %>
      <%= f.input :location %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Submit", class:"form-actions btn-perso btn btn-primary rounded mb-3 mt-2 w-100"%>
    <% end %>
    <%= link_to "back", pigs_path, class:"form-actions btn btn-outline-primary rounded mb-3"%>
  </div>
</div>
