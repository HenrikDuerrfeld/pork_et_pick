<div class="container mt-4 col-4 offset-4">
  <h1>New Pig</h1>
  <%= simple_form_for @pig do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price_per_day %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Submit", class:"btn-outline-primary rounded mb-3" %>
  <% end %>
</div>
