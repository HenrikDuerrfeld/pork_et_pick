<div class="container mt-4 col-4 offset-4">
  <h1>New Pig</h1>
  <%= simple_form_for @pig do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price_per_day %>
    <%= f.input :location %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Submit", class:"form-actions btn btn-outline-primary rounded mb-3"%>
    <%= link_to "back", pigs_path, class:"form-actions btn btn-outline-primary rounded mb-3"%>
  <% end %>
</div>
